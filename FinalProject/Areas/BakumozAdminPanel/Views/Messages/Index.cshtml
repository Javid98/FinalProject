@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Oxunmamış mesajlar";
}



@if (Model.Count() == 0)
{
    <div class="mt-2 d-flex justify-content-between">
        <a class="ml-1 btn btn-success" asp-controller="Messages" asp-action="AllMessages">
            <i class="mdi mdi-format-list-bulleted"></i>
            Bütün mesajlar
        </a>
    </div>
    <h1 class="mt-5" style="text-align:center">
        Oxunmamış mesaj yoxdur
    </h1>
}
else
{
    <h2 style="text-align:center;font-weight:bold" class="mt-3">Oxunmamış mesajlar</h2>

    <div class="mt-2 d-flex justify-content-between">
        <a class="ml-1 btn btn-success" asp-controller="Messages" asp-action="AllMessages">
            <i class="mdi mdi-format-list-bulleted"></i>
            Bütün mesajlar
        </a>
        <a class="ml-1 btn btn-danger" asp-controller="Messages" asp-action="MarkAllMessagesAsRead">
            <i class="mdi mdi-playlist-check"></i>
            Bütün mesajları oxundu say
        </a>
    </div>

    <table class="mt-2 table table-striped">
        <thead>
            <tr>
                <th scope="col">Müştəri</th>
                <th scope="col">Mesajın tarixi</th>
                <th scope="col">Detallar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Contact contact in Model)
            {
                <tr>
                    <td>@contact.Name @contact.Surname</td>
                    <td>@contact.Date.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-info" asp-controller="Messages" asp-action="Detail" asp-route-id="@contact.Id">
                            <i class="mdi mdi-clipboard"></i>
                        </a>
                        <a class="ml-1 btn btn-success" asp-controller="Messages" asp-action="MarkAsRead" asp-route-id="@contact.Id">
                            <i class="mdi mdi-clipboard-check"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}




