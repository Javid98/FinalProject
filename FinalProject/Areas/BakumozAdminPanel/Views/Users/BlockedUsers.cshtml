@model IEnumerable<UserVM>
@{
	ViewData["Title"] = "Bloklanmış müştərilər";
}

@if (Model.Count() == 0)
{
	<h2 style="text-align:center;font-weight:bold" class="mt-5">Heç bir müştəri bloklanmayıb</h2>
}
else
{
	<h2 style="text-align:center;font-weight:bold" class="mt-3">Bloklanmış müştərilər</h2>

	<table class="mt-2 table table-striped">
		<thead>
			<tr>
				<th scope="col">Müştəri</th>
				<th scope="col">Səviyyə</th>
				<th scope="col">Detallar</th>
			</tr>
		</thead>
		<tbody>
			@foreach (UserVM user in Model)
			{
				<tr>
					<td>@user.Fullname</td>
					<td>@user.Role</td>
					<td>
						<a class="btn btn-info" asp-area="" asp-controller="Profile" asp-action="Index" asp-route-username="@user.Username">
							<i class="mdi mdi-clipboard"></i>
						</a>
						<a class="ml-1 btn btn-danger" asp-controller="Users" asp-action="Block" asp-route-username="@user.Username">
							<i class="mdi mdi-block-helper"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}

