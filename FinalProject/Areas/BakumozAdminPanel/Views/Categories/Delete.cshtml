@model Category
@{
    ViewData["Title"] = "Kateqoriyanı sil";
}

<h2 style="text-align:center;font-weight:bold" class="mt-3">Kateqoriyanı sil</h2>\
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col" class="imageAll">Kateqoriyanın şəkli</th>
            <th scope="col">Adı</th>
            <th scope="col">Detallar</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="imageAll">
                @if (Model.ImagePath != null)
                {
                    <img style="width:70px;height:100px" src="~/image/@Model.ImagePath" />
                }
            </td>
            <td>@Model.Name</td>
            <td>
                <form id="deleteCategory" method="post">
                    <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i>Sil</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>

@section Scripts{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
		$("#deleteCategory").submit(function (e) {
			e.preventDefault();
			swal({
				title: "Kateqoriya",
				text: "Bu kateqoriyanı silmək istədiyinizdən əminsiniz?",
				icon: "warning",
				buttons: ["Bağla", "Sil"],
				dangerMode: true,
			})
				.then((willDelete) => {
					if (willDelete) {
						swal("Kateqoriya silindi", {
							icon: "success",
						}).then(function () {
							setTimeout(() => document.querySelector("#deleteCategory").submit(), 100);
						})
					} else {
						swal("Kateqoriya silinmədi");
						button: "Bağla"
					}
				});
		});
    </script>
}

