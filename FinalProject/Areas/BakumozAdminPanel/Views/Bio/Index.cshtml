@model Bio
@{
	ViewData["Title"] = "Bio";
}

<div class="container">
	<div class="logo-edit mt-3 d-flex justify-content-between align-items-center">
		<div class="logo">
			<img style="width:120px;height:80px" src="~/image/@Model.Logo" />
		</div>
		<div class="edit">
			<a class="btn btn-primary" asp-controller="Bio" asp-action="Edit">
				<i class="mdi mdi-pencil"></i> Dəyiş
			</a>
		</div>
	</div>
	@if (Model.FirstPublisherImage != null)
	{
		<h6 class="mt-3">Endirimli nəşriyyat evi</h6>
		<img style="width:300px;height:100px" src="~/image/@Model.FirstPublisherImage" /><br />
		<a asp-area="BakumozAdminPanel" asp-controller="Bio" asp-action="DeleteFirstPublisherImage" class="mt-2 btn btn-danger">Endirimli şəkli sil</a>
	}
	@if (Model.SecondPublisherImage != null)
	{
		<h6 class="mt-3">Endirimli nəşriyyat evi-2</h6>
		<img style="width:300px;height:100px" src="~/image/@Model.SecondPublisherImage" /><br />
		<a asp-area="BakumozAdminPanel" asp-controller="Bio" asp-action="DeleteSecondPublisherImage" class="mt-2 btn btn-danger">Endirimli şəkli sil</a>
	}
	<h6 class="mt-5">
		Telefon nömrəsi
	</h6>
	<p>@Model.PhoneNumber</p>
	<hr />
	<h6>
		Facebook adres
	</h6>
	<p>@Model.FacebookLink</p>
	<hr />
	<h6>
		Instagram adres
	</h6>
	<p>@Model.InstagramLink</p>
	<hr />
	<h6>
		Gmail adres
	</h6>
	<p>@Model.Gmail</p>
	<hr />
	<h6>
		Ölkə
	</h6>
	<p>@Model.Country</p>
	<hr />
	<h6>
		Şəhər
	</h6>
	<p>@Model.City</p>
	<hr />
	<h6>
		Küçə
	</h6>
	<p>@Model.Street</p>
	<hr />
	<h6>
		Məzənnə
	</h6>
	<p class="mb-4">@Model.Currency</p>
</div>

