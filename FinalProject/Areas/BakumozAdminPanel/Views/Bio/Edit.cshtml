@model Bio
@{
	ViewData["Title"] = "Edit";
}

<div class="container">
	<div asp-validation-summary="ModelOnly" class="alert-danger mt-2"></div>
	<form method="post" enctype="multipart/form-data">
		<div class="mt-2">
			<span><strong>Logo</strong></span>
			<input asp-for="Photo" accept="image/*" class="form-control" />
		</div>
		<div class="mt-3">
			@if (Model.FirstPublisherImage != null)
			{
				<div class="mb-2">
					<span><strong>Mövcud şəkil(Endirimli nəşriyyat evi)</strong></span><br />
					<img style="width:300px;height:100px" src="~/image/@Model.FirstPublisherImage" />
				</div>
			}
			<span><strong>Endirimli nəşriyyat evi</strong></span>
			<input asp-for="FirstPublisherPhoto" accept="image/*" class="form-control" />
		</div>
		<div class="mt-3">
			@if (Model.SecondPublisherImage != null)
			{
				<div class="mb-2">
					<span><strong>Mövcud şəkil(Endirimli nəşriyyat evi-2)</strong></span><br />
					<img style="width:300px;height:100px" src="~/image/@Model.SecondPublisherImage" />
				</div>
			}
			<span><strong>Endirimli nəşriyyat evi-2</strong></span>
			<input asp-for="SecondPublisherPhoto" accept="image/*" class="form-control" />
		</div>
		<div class="mt-3">
			<span><strong>Telefon nömrəsi</strong></span>
			<input asp-for="PhoneNumber" class="form-control" />
		</div>
		<div class="mt-3">
			<span><strong>Facebook adres</strong></span>
			<input asp-for="FacebookLink" class="form-control" />
		</div>
		<div class="mt-3">
			<span><strong>Instagram adres</strong></span>
			<input asp-for="InstagramLink" class="form-control" />
		</div>
		<div class="mt-3">
			<span><strong>Gmail adres</strong></span>
			<input asp-for="Gmail" class="form-control" />
		</div>
		<div class="mt-3">
			<span><strong>Ölkə</strong></span>
			<input asp-for="Country" class="form-control" />
		</div>
		<div class="mt-3">
			<span><strong>Şəhər</strong></span>
			<input asp-for="City" class="form-control" />
		</div>
		<div class="mt-3">
			<span><strong>Küçə</strong></span>
			<input asp-for="Street" class="form-control" />
		</div>
		<div class="mt-3">
			<span><strong>Məzənnə</strong></span>
			<input asp-for="Currency" step="any" class="form-control" />
			<span asp-validation-for="Currency" class="text-danger"></span>
		</div>
		<button type="submit" class="mt-3 mb-3 btn btn-primary"><i class="mdi mdi-pencil"></i> Dəyiş</button>
	</form>
</div>

@section Scripts{
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

