
@{
    ViewData["Title"] = "Qeydiyyat/Giriş";
}

<!-- Register Start -->

<section id="Register">
    <div class="forms-container">
        <div class="signin-signup">
            <form action="" class="sign-in-form">
                <h2 class="title">
                    Giriş
                </h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Username">
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Şifrə">
                </div>
                <div class="checkBox">
                    <input type="checkbox">
                    <span>Yadda saxla</span>
                </div>
                <button type="submit" class="bTn solid">Daxil ol</button>
            </form>
            <form action="" class="sign-up-form">
                <h2 class="title">
                    Qeydiyyat
                </h2>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Ad,Soyad">
                </div>
                <div class="input-field">
                    <i class="fas fa-user"></i>
                    <input type="text" placeholder="Username">
                </div>
                <div class="input-field">
                    <i class="fas fa-envelope"></i>
                    <input type="text" placeholder="Email">
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Şifrə">
                </div>
                <div class="input-field">
                    <i class="fas fa-lock"></i>
                    <input type="password" placeholder="Şifrəni təsdiqlə">
                </div>
                <button type="submit" class="bTn solid">Qeydiyyat</button>
            </form>
        </div>
    </div>
    <div class="panels-container">
        <div class="panel left-panel">
            <div class="content">
                <h3>Burada yenisiniz?</h3>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Sequi odit corporis numquam.</p>
                <button class="bTn transparent" id="sign-up-btn">Qeydiyyat</button>
            </div>
            <img src="~/image/rocket.svg" class="image" alt="">
        </div>
        <div class="panel right-panel">
            <div class="content">
                <h3>Mövcud hesabınız var?</h3>
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Sequi odit corporis numquam.</p>
                <button class="bTn transparent" id="sign-in-btn">Giriş</button>
            </div>
            <img src="~/image/desk.svg" class="image" alt="">
        </div>
    </div>
</section>

<!-- Register End -->
