<!-- Profile Start -->

<section id="ProfilePhoto">
	<div class="container">
		<div class="photo-options">
			<img class="image" src="~/image/book-cover.jpg" alt="">
			@if (Model.UserDetail != null)
			{
				@if (Model.UserDetail.ImagePath != null)
				{
					<div class="photo">
						<img src="~/image/usersphotos/@Model.UserDetail.ImagePath" alt="">
						<i class="edit fas fa-edit"></i>
					</div>
				}
				else
				{
					<div class="photo">
						<img src="~/image/pp.jpg" alt="">
						<i class="edit fas fa-edit"></i>
					</div>
				}
			}
			else
			{
				<div class="photo">
					<img src="~/image/pp.jpg" alt="">
					<i class="edit fas fa-edit"></i>
				</div>
			}
			<div class="options">
				<div class="ppChange">
					<i class="fas fa-camera" data-toggle="modal" data-target="#ModalPhoto"></i>
				</div>
				@if (Model.UserDetail != null)
				{
					@if (Model.UserDetail.ImagePath != null)
					{
						<div class="pp">
							<img src="~/image/usersphotos/@Model.UserDetail.ImagePath" alt="">
						</div>
					}
					else
					{
						<div class="pp">
							<img src="~/image/pp.jpg" alt="">
						</div>
					}
				}
				else
				{
					<div class="pp">
						<img src="~/image/pp.jpg" alt="">
					</div>
				}
				<div class="settings">
					<i class="fas fa-user-cog" data-toggle="modal" data-target="#ModalSettings"></i>
				</div>
				<i class="close fas fa-times"></i>
			</div>
			<div class="name">
				<h5>Javid Asadullayev</h5>
			</div>
		</div>
	</div>
</section>

<section id="ProfileAbout">
	<div class="container">
		<div class="row justify-content-center">
			@if (Model.AppUser.UserName == User.Identity.Name)
			{
				<div class="col-lg-4 col-sm-8 col-8">
					<div class="card-sale mt-5">
						<div class="face saleFace1">
							<div class="content1">
								<i class="fas fa-archive"></i>
								<h3>Alışlar</h3>
							</div>
						</div>

					</div>
					<div class="face saleFace2">
						<div class="content2">
							<div class="sale">
								<ul>
									<li>
										<h6>20/09/2020</h6>
									</li>
									<li>
										<h6>20/09/2020</h6>
									</li>
									<li>
										<h6>20/09/2020</h6>
									</li>
									<li>
